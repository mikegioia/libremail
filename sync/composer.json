{
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ParticleBits/imap"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ParticleBits/zend-mail"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ParticleBits/zend-mime"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mikegioia/pdo"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-pdo": "*",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "particlebits/imap": "@dev",
        "pimple/pimple": "^3.2.3",
        "monolog/monolog": "^1.23",
        "league/climate": "^3.4",
        "particle/validator": "^2.3",
        "ilya/belt": "^2.1",
        "neitanod/forceutf8": "^2.0",
        "react/event-loop": "@dev",
        "cboden/ratchet": "^0.4.1",
        "evenement/evenement": "^3.0",
        "symfony/event-dispatcher": "^3.4",
        "react/child-process": "^0.5.2",
        "mkraemer/react-pcntl": "^3.0",
        "mikegioia/pdo": "@dev"
    },
    "suggest": {
        "ext-mysqlnd": "MySQL Native Driver",
        "ext-intl": "Handle IDN in AddressList hostnames"
    },
    "minimum-stability": "dev",
    "bin": [
        "sync",
        "server",
        "libremail"
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "test": "./vendor/bin/phpunit",
        "lint": "php-cs-fixer fix --dry-run --diff"
    }
}
